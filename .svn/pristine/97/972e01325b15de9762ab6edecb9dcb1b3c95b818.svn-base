//        }
         cell.contLab.text = money ;
        
    }else{
        
//        if (_isNoCount) {
//            cell.contLab.text = @"暂无数据";
//            
//        }else{
//          
//            
//        }
          cell.contLab.text = context;
        
    }
    return cell;
    
    
    
}
-(CGFloat)tableView:(UITableView *)tableView heightForRowAtIndexPath:(NSIndexPath *)indexPath{
    
    return 50;
    
}

@end
