        switch (index) {
            case 0:
            {
                NSLog(@"订单查询");
                QueryViewController *query =[QueryViewController new];
                query.hidesBottomBarWhenPushed = YES;
                query.queryOrderState = kOrderCustomerUser;
                [self.navigationController pushViewController:query animated:YES];
            }
