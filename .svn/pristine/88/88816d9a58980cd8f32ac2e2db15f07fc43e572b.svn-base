                break;
        }
    }else{
        switch (index) {
            case 0:
            {
                NSLog(@"智能扫码");
                CodePayViewController *codePay = [CodePayViewController new];
                codePay.hidesBottomBarWhenPushed = YES;
                [self.navigationController pushViewController:codePay animated:YES];
                
         
            }
                break;
            case 1:
            {
                NSLog(@"二维码");
